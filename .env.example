# MAPS API Configuration Example
# Copy this file to .env and customize for your environment

# Application
MAPS_APP_NAME="MAPS API"
MAPS_DEBUG=false
MAPS_APP_VERSION=1.0.0

# Server
MAPS_HOST=0.0.0.0
MAPS_PORT=8000
MAPS_RELOAD=false

# CORS Origins (JSON array or comma-separated list)
# Examples:
#   ["http://localhost:3000", "https://maps.example.com"]
#   http://localhost:3000,https://maps.example.com
# WARNING: ["*"] allows all origins (security risk in production)
MAPS_CORS_ORIGINS=["http://localhost:3000"]

# File Upload
MAPS_MAX_UPLOAD_SIZE=104857600  # 100MB

# Logging
MAPS_LOG_LEVEL=INFO

# Profiles Directory
MAPS_PROFILE_DIRECTORY=./profiles

# Database (optional - for future use)
# DATABASE_URL=postgresql://user:pass@localhost:5432/maps_db

# Cache
MAPS_CACHE_TTL=300  # 5 minutes
